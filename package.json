{
	"name": "aoe2-rms",
	"displayName": "AoE2 RMS Syntax",
	"type": "module",
	"description": "Age of Empires 2 (AoE2) Random Map Scripting (RMS) language support - Modernized fork",
	"author": "Mangudai (original), Austin (modernized)",
	"license": "MIT",
	"icon": "icon.png",
	"version": "1.2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/austinhardy318/vscode-aoe2-rms.git"
	},
	"homepage": "https://github.com/austinhardy318/vscode-aoe2-rms",
	"bugs": {
		"url": "https://github.com/austinhardy318/vscode-aoe2-rms/issues"
	},
	"publisher": "austinhardy318",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"Age of Empires 2",
		"aoe2",
		"rms",
		"random map script",
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.85.0",
		"node": ">=20.0.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "aoe2-rms",
				"aliases": [
					"AoE2 Random Map Script",
					"aoe2-rms"
				],
				"extensions": [
					".rms"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "aoe2-rms",
				"scopeName": "source.aoe2-rms",
				"path": "./aoe2-rms.tmLanguage"
			}
		],
		"themes": [
			{
				"label": "AoE2 RMS Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/aoe2-rms-dark.json"
			},
			{
				"label": "AoE2 RMS Light",
				"uiTheme": "vs",
				"path": "./themes/aoe2-rms-light.json"
			},
			{
				"label": "AoE2 RMS Vibrant",
				"uiTheme": "vs-dark",
				"path": "./themes/aoe2-rms-vibrant.json"
			},
			{
				"label": "AoE2 RMS Monokai",
				"uiTheme": "vs-dark",
				"path": "./themes/aoe2-rms-monokai.json"
			},
			{
				"label": "AoE2 RMS Cursor Monokai",
				"uiTheme": "vs-dark",
				"path": "./themes/aoe2-rms-cursor-monokai.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"watch:client": "tsc -b ./client/tsconfig.json --watch",
		"watch:server": "tsc -b ./server/tsconfig.json --watch",
		"compile": "npm run compile:client && npm run compile:server",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"package": "vsce package",
		"build:docker": "docker build -t aoe2-rms-builder . && docker run --name aoe2-rms-extract aoe2-rms-builder && docker cp aoe2-rms-extract:/output/. ./output/ && docker rm aoe2-rms-extract",
		"test": "npm run test:parser && npm run test:extension",
		"test:parser": "node scripts/test-parser.cjs",
		"test:extension": "node scripts/test-extension.cjs",
		"test:integration": "npm run compile && npm run package && npm run test:parser",
		"security:audit": "npm audit --audit-level=moderate",
		"security:fix": "npm audit fix",
		"ci:test": "npm run lint && npm run format:check && npm run compile && npm run test",
		"ci:build": "npm run ci:test && npm run package",
		"publish:ovsx": "ovsx publish",
		"publish:manual": "npm run package && echo 'VSIX file ready for manual submission'"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.10.0",
		"@typescript-eslint/eslint-plugin": "^8.46.1",
		"@typescript-eslint/parser": "^8.46.1",
		"@vscode/test-electron": "^2.3.8",
		"@vscode/vsce": "^3.6.2",
		"esbuild": "^0.25.11",
		"eslint": "^9.38.0",
		"glob": "^11.0.3",
		"globals": "^16.4.0",
		"prettier": "^3.1.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.3.3"
	}
}
